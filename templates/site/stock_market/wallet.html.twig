{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center my-5">Mon portefeuille d'actions</h1>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Action</th>
                        <th class="text-end">Prix d'achat</th>
                        <th class="text-end">Quantité</th>
                        <th class="text-end">Prix actuel</th>
                        <th class="text-end">Valeur totale</th>
                        <th class="text-end">Gain/Perte</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in stocks_with_prices %}
                    {# The keys for Alpha Vantage are different, so we adapt the template to them. #}
                    {% set currentPrice = item.prices['05. price']|default(null) %}
                    {% set purchasePriceIncludingTVA = item.entity.purchasePriceIncludingTVA / 100|number_format(2, '.', ',') %}
                    {% set totalValue = item.totalValue|default(null) %}
                    {% set gainOrLoss = item.gainOrLoss|default(null) %}

                    <tr class="table-hover">
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <div class="fw-bold">{{ item.entity.name }}</div>
                                    <div class="text-muted">{{ item.entity.symbol }} <span class="small">({{ item.entity.isinCode }})</span></div>
                                </div>
                            </div>
                        </td>
                        <td class="text-end">{{ purchasePriceIncludingTVA }} €</td>
                        <td class="text-end">{{ item.entity.quantity }}</td>
                        <td class="text-end">
                            {% if currentPrice is not null %}
                                {{ currentPrice|number_format(2, '.', ',') }} €
                            {% else %}
                                <span class="text-muted">N/A</span>
                            {% endif %}
                        </td>
                        <td class="text-end fw-bold">
                            {% if totalValue is not null %}
                                {{ totalValue|number_format(2, '.', ',') }} €
                            {% else %}
                                <span class="text-muted">N/A</span>
                            {% endif %}
                        </td>
                        <td class="text-end fw-bold">
                            {% if gainOrLoss is not null %}
                                <span class="{% if gainOrLoss > 0 %}text-success{% elseif gainOrLoss < 0 %}text-danger{% else %}text-muted{% endif %}">
                                    {% if gainOrLoss > 0 %}
                                        <i class="fas fa-caret-up"></i>
                                    {% elseif gainOrLoss < 0 %}
                                        <i class="fas fa-caret-down"></i>
                                    {% endif %}
                                    {{ gainOrLoss|number_format(2, '.', ',') }} €
                                </span>
                            {% else %}
                                <span class="text-muted">N/A</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            <i class="fas fa-folder-open me-2"></i>
                            Aucune action dans votre portefeuille.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}